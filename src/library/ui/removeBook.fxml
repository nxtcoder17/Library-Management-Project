<?xml version="1.0" encoding="utf-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="library.ui.Controller"
      xmlns:fx="https://javafx.com/fxml"
      stylesheets="/library/themes/dark_theme.css"
      styleClass="rootPane"
      spacing="10" alignment="CENTER">

      <GridPane hgap="20" vgap="10" alignment="CENTER" >

        <Label GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="RIGHT"
          text="BookId" styleClass="addBook-labels" />
        <TextField GridPane.rowIndex="0"  GridPane.columnIndex="1"
          fx:id="removeBook_field_bookId" styleClass="textField" />

      </GridPane>

      <HBox spacing="30" alignment="CENTER">
        <Button fx:id="removeBook_button_submit"
                text="submit"
                styleClass="submitButton"
                onAction="#removeBook_button_submit_Clicked" />

        <Button fx:id="removeBook_button_cancel"
                text="cancel"
                styleClass="submitButton"
                onAction="#removeBook_button_cancel_Clicked" />
      </HBox>
</VBox>
